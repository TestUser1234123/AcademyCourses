div(ng-controller="LoginController")
    form.form-inline.my-2.my-lg-0
        input.form-control.mr-sm-2(type="text", placeholder="Username" ng-model="user.username")
        input.form-control.mr-sm-2(type="password", placeholder="Password" ng-model="user.password")
        button.btn.btn-outline-success.my-2.my-sm-0(ng-click="login(user)") Login